<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mes.bf.eqp.mapper.MchnMapper">

	<select id="MchnAllList" resultType="MchnVO">
		SELECT mc.mchn_code, 
				mc.mchn_name, 
				mc.mchn_model, 
				mc.mchn_mnfct_date,
		       	mc.mchn_inspc_cycle, 
		       	mc.mchn_stts, 
		       	mc.mchn_remk,
		       	vcd.vend_cd_nm, 
		       	inp.inspc_edate
		FROM BF_EQP_MCHN mc JOIN bf_cmn_vendor_code vcd
			ON mc.vend_cd_code = vcd.vend_cd_code
		JOIN BF_EQP_INSPC inp
			ON inp.mchn_code = mc.mchn_code
	</select>
